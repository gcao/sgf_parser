#!/usr/bin/env ruby

if ARGV.size == 0
  puts <<-USAGE
Usage: 
  sgf <SGF_FILE>
  USAGE
  exit 1
end

sgf_rb = File.expand_path(File.dirname(__FILE__) + '/../lib/sgf.rb')
if File.exists?(sgf_rb)
  require sgf_rb
else
  require 'rubygems'
  require 'sgf'
end

filename = ARGV[0]

if File.directory?(filename)
  Dir["#{filename}/**/*"].each do |file|
    SGF::Parser.parse_file(file, false)
  end
else
  SGF::Parser.parse_file(filename, true)
end
